@model SalesViewModel

@{
    ViewData["Title"] = "Create Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
     <link rel="stylesheet" href="~/css/Sales.css">
     <link rel="stylesheet" href="~/css/themes.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
     <Style>
        .alert {
            display: none;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .alert-success {
            background-color: #dff0d8;
            border-color: #d6e9c6;
            color: #3c763d;
        }

     </Style>
</head>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {


        // Add event listener for the "Add Another Item" button
        $("#createRowBtn").on("click", function () {
            // Clone the first row
            var newRow = $("#salesTable tr:last").clone();

            // Clear input values in the new row
            newRow.find("input").val("");

            // Append the new row to the table
            $("#salesTable").append(newRow);
        });

        // Populate gender dropdown
        $.ajax({
            url: '/Sales/FetchGenders',
            type: 'GET',
            success: function (data) {
                console.log(data); // Check the received data in the console
                var clothingTypeDropdown = $('#GenderId');
                //  clothingTypeDropdown.empty(); // Remove existing options before populating

                $.each(data, function (index, type) {
                    clothingTypeDropdown.append($('<option></option>').val(type.genderId).text(type.genderName));
                });
            }
        });

        $.ajax({
            url: '/Sales/FetchClothings',
            type: 'GET',
            success: function (data) {
                console.log(data); // Check the received data in the console
                var clothingTypeDropdown = $('#ClothingId');
                //  clothingTypeDropdown.empty(); // Remove existing options before populating

                $.each(data, function (index, type) {
                    clothingTypeDropdown.append($('<option></option>').val(type.clothingId).text(type.clothingName));
                });
            }
        });
        // Handle form submission
        // Handle form submission
        $('#saleForm').submit(function (event) {
            event.preventDefault(); // Prevent the form from submitting normally

            var formData = $(this).serialize(); // Serialize the form data

            $.ajax({
                url: '/Sales/Create',
                type: 'POST',
                data: formData,
                success: function (response) {
                    console.log(response); // Handle the response from the server

                    // Hide the form and show the success message
                    $('.frame-header').hide();
                    $('#successMessage').fadeIn();

                    // You can also redirect the user to another page after showing the success message
                     //window.location.href = '/Home/SalesDashboard';
                },
                error: function (error) {
                    console.log(error); // Handle the error case
                    // Perform any additional actions for error handling
                }
            });
        });


    });

</script>
<div class="frame">
    <div id="successMessage" class="alert alert-success" style="display: none;">
        Item added successfully!
    </div>
    <div class="frame-header">
        <h3>Sales</h3>
    </div>
    <form id="saleForm">
        @Html.AntiForgeryToken()
        <table class="form-table" id="salesTable">
            <tr>
                <td>
                    <div class="form-group">
                        <label for="ClothingId">Clothing</label>
                        <select class="form-control" name="ClothingId">
                            <option value="">Select Clothing</option>
                            <!-- Populate options dynamically from the database -->
                        </select>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="GenderId">Gender</label>
                        <select class="form-control" name="GenderId">
                            <option value="">Select Gender</option>
                            <!-- Populate options dynamically from the database -->
                        </select>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <input type="text" class="form-control" name="Description" required>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="ActualPrice">Actual Price</label>
                        <input type="number" step="0.01" class="form-control" name="ActualPrice" required>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="SalePrice">Sale Price</label>
                        <input type="number" step="0.01" class="form-control" name="SalePrice" required>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="SaleDate">Sale Date</label>
                        <input type="date" class="form-control" name="SaleDate" required>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="Quantity">Quantity</label>
                        <input type="number" step="0.01" class="form-control" name="Quantity" required>
                    </div>
                </td>
            </tr>
        </table>

        <button type="button" id="createRowBtn" class="btn btn-secondary">
            <i class="fas fa-plus"></i> Add Another Item
        </button>
        <hr>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create
        </button>
    </form>
</div>
