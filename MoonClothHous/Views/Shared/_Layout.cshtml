                <div class="nav-item">
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <div class="nav-item dropdown-toggle" id="userDropdown"  data-bs-toggle="dropdown"  aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user" style="margin-right:5px;"></i>
                            @userName
                        </div>
                        <div class="dropdown-menu" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="#">User Information</a>
                            <form method="post" action="@Url.Action("Logout", "Accounts")">
                                <button type="submit" class="dropdown-item">Logout</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <button class="nav-item" id="loginButton" onclick="location.href='@Url.Action("Login", "Accounts")'">
                            <i class="fas fa-user" style="margin-right:5px;"></i> Login
                        </button>
                    }
                </div>
                <button class="nav-item" onclick="location.href='@Url.Action("Contact", "Home")'">
                    <i class="fa fa-phone" style="margin-right:5px;"></i> Contact
                </button>
                <button class="nav-item" onclick="location.href='@Url.Action("Cart", "Home")'">
                    <i class="fas fa-shopping-cart" style="margin-right:5px;"></i>
