<script>
    $('.product a').on('click', function (e) {
        e.preventDefault();
        var imageUrl = $(this).data('image-url');
        var productName = "Product Name"; // Replace with the actual product name
        var productDescription = "Product description goes here."; // Replace with the product description
        var productPrice = 100.00; // Replace with the product price
        var productRating = 4.5; // Replace with the actual product rating

        // Calculate the number of full and empty stars
        var fullStars = Math.floor(productRating);
        var halfStar = productRating - fullStars >= 0.5;
        var emptyStars = 5 - fullStars - (halfStar ? 1 : 0);

        var starRatingHtml = '';
        for (var i = 0; i < fullStars; i++) {
            starRatingHtml += '<i class="fas fa-star"></i>'; // Assuming you're using Font Awesome icons
        }
        if (halfStar) {
            starRatingHtml += '<i class="fas fa-star-half-alt"></i>';
        }
        for (var i = 0; i < emptyStars; i++) {
            starRatingHtml += '<i class="far fa-star"></i>';
        }

        $('#productImage').attr('src', imageUrl);
        $('#productName').text(productName);
        $('#productDescription').text(productDescription);
        $('#productPrice').text(productPrice.toFixed(2));
        $('#starRating').html(starRatingHtml);
        $('#productDetailModal').modal('show');
    });
</script>




