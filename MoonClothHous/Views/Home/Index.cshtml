<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page with Filters</title>
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>

        .productImage {
            height: 100px;
            width: 100px;
        }

        .filter-section {
            /* Adjust the padding or margin values as needed */
            width:150px;
            align-content: start;
            font-size:smaller;
        }

        .filter label {
            display: inline; /* Display radio labels as block-level elements */
        }

        h4 {
            color: Black;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <h4>@ViewData["Title"]</h4>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 col-lg-2 filter-section">
                <div class="filter">
                    <h5>Color:</h5>
                    <div class="radio-group">
                        <label><input type="radio" class="color-filter" name="color" data-color="red"> Red</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="blue"> Blue</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="green"> Green</label>
                    </div>
                </div>
                <div class="filter">
                    <h5>Color:</h5>
                    <div class="radio-group">
                        <label><input type="radio" class="color-filter" name="color" data-color="red"> Red</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="blue"> Blue</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="green"> Green</label>
                    </div>
                </div>
                <div class="filter">
                    <h5>Color:</h5>
                    <div class="radio-group">
                        <label><input type="radio" class="color-filter" name="color" data-color="red"> Red</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="blue"> Blue</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="green"> Green</label>
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="Card col-md-3">
                            <div class="product">
                                <!-- Display the image using the retrieved URL -->
                                <img class="productImage" src="@product.ImageUrl" alt="Product Image">
                                <p>This is very good product</p>
                                <button class="btn btn-secondary btn-block w-20">Add to Cart</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Add your JavaScript code for filtering and rendering products here -->

</body>
</html>