<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page with Filters</title>
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .productImage {
            height: 100px;
            width: 100px;
        }

        .filter-section {
            /* Adjust the padding or margin values as needed */
            align-content: start;
        }

        .filter label {
            display: inline; /* Display radio labels as block-level elements */
        }

        h1 {
            color: white;
            Border-block: line;
            border-radius: 5px;
            Background-color: Black
        }
    </style>
</head>
<body>
    <h1 class="col-md-2">@ViewData["Title"]</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 col-lg-2 filter-section">
                <div class="filter">
                    <h5>Color:</h5>
                    <div class="radio-group">
                        <label><input type="radio" class="color-filter" name="color" data-color="red"> Red</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="blue"> Blue</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="green"> Green</label>
                    </div>
                </div>
                <div class="filter">
                    <h5>Color:</h5>
                    <div class="radio-group">
                        <label><input type="radio" class="color-filter" name="color" data-color="red"> Red</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="blue"> Blue</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="green"> Green</label>
                    </div>
                </div>
                <div class="filter">
                    <h5>Color:</h5>
                    <div class="radio-group">
                        <label><input type="radio" class="color-filter" name="color" data-color="red"> Red</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="blue"> Blue</label>
                        <label><input type="radio" class="color-filter" name="color" data-color="green"> Green</label>
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-3 col-auto">
                            <div class="product">
                                <img class="productImage" src="~/images/logo.png" alt="Product Image">
                                <h4>@product.ProductId</h4>
                                <p>@(product.IsPrimary ? "true" : "false")</p>
                                <button class="btn btn-secondary btn-block w-50">Add to Cart</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Add your JavaScript code for filtering and rendering products here -->

</body>
</html>